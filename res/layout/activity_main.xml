<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RelLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="bottom|left"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/BG_Weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:contentDescription="@string/placeholder"
        android:scaleType="center"
        android:src="@drawable/bg" />

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical" >

            <TextView
                android:id="@+id/cityname"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:gravity="center"
                android:shadowColor="@color/gray_aplha"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/placeholder_city"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="@dimen/font_middle_size"
                android:fontFamily="sans-serif" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_marginTop="52dp" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="182dp"
                android:contentDescription="@string/placeholder"
                android:src="@drawable/nt_chancerain" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_marginTop="256dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/degress_up"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:fontFamily="sans"
                android:gravity="right"
                android:shadowColor="@color/gray_aplha"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/placeholder_degress_up"
                android:textAlignment="gravity"
                android:textColor="@color/white"
                android:textSize="@dimen/font_title_size" />

            <TextView
                android:id="@+id/degress_down"
                android:layout_width="0dp"
                android:layout_height="64dp"
                android:layout_gravity="top"
                android:layout_weight="1"
                android:fontFamily="sans"
                android:gravity="bottom|left"
                android:shadowColor="@color/gray_aplha"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/placeholder_degress_down"
                android:textAlignment="gravity"
                android:textColor="@color/purple"
                android:textSize="@dimen/font_title2_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="fill_vertical"
            android:layout_marginTop="310dp" >

            <TextView
                android:id="@+id/datedisplay"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:shadowColor="@color/gray_aplha"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="1"
                android:text="@string/placeholder_date"
                android:textAlignment="gravity"
                android:textColor="@color/white" />

        </LinearLayout>

    </FrameLayout>

</RelativeLayout>
